{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "dotnet: build"
		},
		{
			"label": "build-debug",
			"command": "dotnet",
			"type": "shell",
			"args": [
					"build",
					"${workspaceFolder}/src/Aderis.OpcuaInjection/Aderis.OpcuaInjection.sln", // Replace with your solution or project file
					"/p:Configuration=Debug"
			],
			"group": "build",
			"presentation": {
					"reveal": "always",
					"focus": true
			},
			"problemMatcher": "$msCompile"
	}
	]
}